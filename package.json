{
  "name": "monument-ui",
  "version": "1.0.0",
  "description": "Add 3D effect to React elements",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "./lib/monument-ui.min.js",
  "scripts": {
    "release": "npm run prettier && npm run lint && npm run build:dev && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint './src/**/*.tsx' --fix",
    "prettier": "prettier --write 'src/**/*.tsx'",
    "deploy": "gh-pages -d demo/build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/monument-ui.git"
  },
  "keywords": [
    "Monument",
    "UI",
    "React",
    "library",
    "3D",
    "depth"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/monument-ui/issues"
  },
  "homepage": "https://github.com/JB1905/monument-ui#readme",
  "dependencies": {
    "color": "^3.1.1",
    "styled-components": "^4.2.0",
    "to-px": "^1.1.0"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/react": "^16.8.19",
    "@types/styled-components": "^4.1.15",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "gh-pages": "^2.0.1",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "ts-loader": "^6.0.1",
    "typescript": "^3.5.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
